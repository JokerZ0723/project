/* pages/index/index.wxss */
.profile{
  background: #2196F3;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
  /* filter:blur(40rpx);
  opacity: 0.8; */
  margin-bottom: 20rpx;
}
.profile-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%,60rpx);
}
.profile-name{
  font-size: 36rpx;
  color: white;
  position: absolute;
  left: 50%;
  transform: translate(-50%,270rpx);
}